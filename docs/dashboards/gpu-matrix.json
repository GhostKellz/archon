{
  "uid": "archon-gpu-matrix",
  "title": "Archon GPU Matrix",
  "description": "Visualise Archon WebGPU watchdog stability across compositor/GPU combinations.",
  "version": 1,
  "schemaVersion": 39,
  "tags": ["archon", "gpu"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Instability Rate",
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 0.1
              },
              {
                "color": "red",
                "value": 0.3
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["last"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase((archon_webgpu_watchdog_status{compositor=~\"$compositor\", vendor=~\"$vendor\", workload=~\"$workload\"} > 0)[$__interval])) / sum(increase((archon_webgpu_watchdog_status{compositor=~\"$compositor\", vendor=~\"$vendor\", workload=~\"$workload\"} >= 0)[$__interval]))"
        }
      ],
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 6}
    },
    {
      "id": 2,
      "type": "table",
      "title": "Latest Runs",
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "custom": {},
          "mappings": []
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "archon_webgpu_watchdog_status{compositor=~\"$compositor\", vendor=~\"$vendor\", workload=~\"$workload\"}"
        },
        {
          "refId": "B",
          "expr": "archon_webgpu_watchdog_frames_rendered{compositor=~\"$compositor\", vendor=~\"$vendor\", workload=~\"$workload\"}"
        },
        {
          "refId": "C",
          "expr": "archon_webgpu_watchdog_duration_seconds{compositor=~\"$compositor\", vendor=~\"$vendor\", workload=~\"$workload\"}"
        }
      ],
      "transformations": [
        {
          "id": "labelsToFields",
          "options": {
            "mode": "columns"
          }
        }
      ],
      "gridPos": {"x": 8, "y": 0, "w": 16, "h": 12}
    }
  ],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "workload",
        "label": "Workload",
        "datasource": null,
        "definition": "label_values(archon_webgpu_watchdog_status, workload)",
        "refresh": 2
      },
      {
        "type": "query",
        "name": "vendor",
        "label": "Vendor",
        "datasource": null,
        "definition": "label_values(archon_webgpu_watchdog_status, vendor)",
        "refresh": 2
      },
      {
        "type": "query",
        "name": "compositor",
        "label": "Compositor",
        "datasource": null,
        "definition": "label_values(archon_webgpu_watchdog_status, compositor)",
        "refresh": 2
      }
    ]
  },
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
  }
}
