{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Primary Prometheus data source",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "10.0.0" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "10.0.0" },
    { "type": "panel", "id": "table", "name": "Table", "version": "10.0.0" }
  ],
  "annotations": {
    "list": []
  },
  "editable": true,
  "graphTooltip": 1,
  "id": null,
  "panels": [
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "axisCenteredZero": false,
            "axisColorMode": "text",
            "axisPlacement": "auto"
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        },
        "tooltip": {
          "mode": "multi"
        }
      },
      "targets": [
        {
          "expr": "rate(archon_mcp_tool_invocations_total[$__rate_interval])",
          "legendFormat": "{{connector}} :: {{tool}}"
        }
      ],
      "title": "MCP tool invocation rate",
      "type": "timeseries"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 8 },
      "id": 2,
      "options": {
        "orientation": "horizontal",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        }
      },
      "targets": [
        {
          "expr": "avg_over_time(archon_mcp_tool_latency_seconds_sum[$__range]) / avg_over_time(archon_mcp_tool_latency_seconds_count[$__range])",
          "legendFormat": "Average latency"
        }
      ],
      "title": "Average tool latency",
      "type": "stat"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 8 },
      "id": 3,
      "options": {
        "showHeader": true
      },
      "targets": [
        {
          "expr": "archon_mcp_connector_health",
          "format": "table",
          "instant": true,
          "legendFormat": ""
        }
      ],
      "title": "Connector health",
      "type": "table"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["archon", "mcp"],
  "templating": {
    "list": [
      {
        "name": "Datasource",
        "type": "datasource",
        "label": "Prometheus",
        "query": "prometheus",
        "current": { "selected": true, "text": "Prometheus", "value": "Prometheus" }
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "title": "Archon MCP Connectors",
  "uid": "archon-mcp-connectors",
  "version": 1
}
