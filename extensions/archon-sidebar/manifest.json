{
  "manifest_version": 3,
  "name": "Archon Sidebar",
  "description": "Native Archon AI assistant panel for Chromium Max.",
  "version": "0.1.0",
  "key": "",
  "permissions": ["nativeMessaging", "storage", "sidePanel"],
  "host_permissions": ["http://127.0.0.1:8805/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {
    "default_title": "Archon Sidebar"
  }
}
